programa
{
	inclua biblioteca Matematica --> mat
	
	funcao inicio ()
	{
		real n1, n2, media

		escreva ("Informe a nota 1: " )
		leia (n1)
		escreva( "Informe a nota 2: ")
		leia (n2)
	

		media = (n1 + n2) / 2

		limpa()
		escreva ("A média final é: ", mat.arredondar(media, 2), "\n\n")


		se (n1 < media)
		{ 
			escreva ("A nota 1 é menor que a média final\n") 
		}
		
		se (n2 < media) 
		{
			escreva ("A nota 2 é menor que a média final\n")
		}
		
	}
}
